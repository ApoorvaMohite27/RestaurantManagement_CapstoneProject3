@using RestaurantManagement.Areas.RestaurantMgmt.ViewModels
@model ShowOrdersViewModel
@{
}

<h1>List Of Orders</h1>


<div class="row">
    <div class="col-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CustomerId"></label>
                <select asp-for="CustomerId" asp-items="ViewBag.CustomersCollection" class="form-control"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Show Orders</button>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}